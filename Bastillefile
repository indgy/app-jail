# Create the minimal required folders
CMD mkdir -p /bin /etc /lib /libexec /usr/sbin /var/log /var/run

# Copy the minimum required libraries into the jail
CP /lib/libc.so.7 /lib
CP /lib/libthr.so.3 /lib
CP /libexec/ld-elf.so.1 /libexec
# The daemon can monitor and restart your app
CP /lib/libutil.so.9 /lib
CP /usr/sbin/daemon /usr/sbin
# Kill is required to stop the daemon
CP /bin/kill /usr/sbin

# This is required for networking
CP /etc/resolv.conf /etc

# Forward ports tcp host:80 to jail:2000
RDR tcp 80 2000